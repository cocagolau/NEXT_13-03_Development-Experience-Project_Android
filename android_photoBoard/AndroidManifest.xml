<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.android_photoboard"
    android:versionCode="1"
    android:versionName="1.0" >

    <user-permission android:name="android.permission.INTERNET" />
    <user-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="18" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.example.android_photoboard.MainActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.example.android_photoboard.WritingActivity"
            android:label="@string/title_activity_writing" >
        </activity>
        <activity
            android:name="com.example.android_photoboard.ContentsActivity"
            android:label="@string/title_activity_contents" >
        </activity>
        <activity
            android:name="com.example.android_photoboard.FullscreenActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:label="@string/title_activity_fullscreen"
            android:theme="@style/FullscreenTheme" >
        </activity>
        <activity
            android:name="com.example.android_photoboard.JSONParsingActivity"
            android:label="@string/title_activity_jsonparsing" >
        </activity>
        <activity
            android:name="com.example.android_photoboard.AndroidJSONParsingActivity"
            android:label="@string/title_activity_android_jsonparsing" >
        </activity>
        <activity
            android:name="com.example.android_photoboard.SingleMenuItemActivity"
            android:label="@string/title_activity_single_menu_item" >
        </activity>
        <activity
            android:name="com.example.android_photoboard.LoginActivity"
            android:label="@string/title_activity_log" >
                       <intent-filter>
               <action android:name="android.intent.action.MAIN" />

               <category android:name="android.intent.category.LAUNCHER" />
           </intent-filter>
        </activity>
        <activity
            android:name="com.example.android_photoboard.SignupActivity"
            android:label="@string/title_activity_signup" >
        </activity>
    </application>

</manifest>
